{
    "manifest_version": 3,
    "name": "Watch Before Buy",
    "version": "0.1",
    "description": "Watch Before Buy",
    "permissions": [
      "activeTab",
      "contextMenus",
      "webNavigation",
      "storage",
      "tabs"
    ],
    "action": {
      "default_title": "Open"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "index.js"
        ],
        "css": [
          "index.css"
        ],
        "run_at": "document_end",
        "all_frames": true
      }
    ]
  }